<a href="/expense/new" class="btn btn-secondary">Create</a>
<div class="input-group mb-3">
  <span class="input-group-text"><i class="mx-auto fa-solid fa-list"></i></span>
  <select id="select-category" name="categoryId" class="form-select">
    <option value="">All</option>
    {{> category}}
  </select>
</div>
<ul id="expense-panel" class="list-group">
  {{#each data}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-2">
        {{ this.categoryId.name}}
      </div>
      <div class="col-2">
        {{ this.name }}
      </div>
      <div class="col-2">
        {{ this.date }}
      </div>
      <div class="col-2">
        {{ this.amount }}
      </div>
      <div class="col-2">
        <a href="/expense/edit/{{ this._id }}" class="btn btn-secondary">Edit</a>
        <!-- Button trigger modal -->
        <button data-name="{{ this.name }}" data-id="{{ this._id }}" type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#deleteModal">
          Delete
        </button>
      </div>
    </div>
  </li>
  {{/each}}
</ul>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5">
          請確認是否要刪除此筆餐廳 ?
        </h1>
      </div>
      <div id="modal-body" class="modal-body">
        
      </div>
      <div class="modal-footer">
        <form id="delete-check" action="" method="POST" class="btn-delete-box">
          <button class="btn btn-dark" type="submit">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/javascripts/index.js"></script>