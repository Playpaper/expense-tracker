<div class="row">
  <div class="col-md-8 m-auto">
    <h3 class="my-3">總金額 : <span class="fs-1 text-warning">${{ amountSum }}</span></h3>
    <div class="input-group my-3">
      <span class="input-group-text"><i class="mx-auto fa-solid fa-list"></i></span>
      <select id="select-category" name="categoryId" class="form-select">
        <option value="">All</option>
        {{#each category}}
        <option data-one="{{../categoryChoose}}" data-two="{{ this._id }}" value="{{ this._id }}" {{category ../categoryChoose this._id}}>{{ this.name }}</option>
        {{/each}}
      </select>
    </div>
    {{#each date}}
    {{ this.yearMonthDayUTC }}
    {{/each}}
    <ul id="expense-panel" class="list-group">
      {{#each data}}
      <li class="list-group-item ">
        <div class="row">
          <div class="col-2 d-flex justify-content-center">
            {{ this.categoryId.name}}
          </div>
          <div class="col-2 d-flex justify-content-center">
            {{ this.name }}
          </div>
          <div class="col-2 d-flex justify-content-center">
            {{ this.dateFormat }}
          </div>
          <div class="col-2 d-flex justify-content-center">
            ${{ this.amount }}
          </div>
          <div class="col-4 d-flex justify-content-center">
            <a href="/expense/edit/{{ this._id }}" class="btn btn-secondary mx-2">Edit</a>
            <!-- Button trigger modal -->
            <button data-name="{{ this.name }}" data-id="{{ this._id }}" type="button" class="btn btn-secondary mx-2" data-bs-toggle="modal" data-bs-target="#deleteModal">
              Delete
            </button>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
    <div class="justify-content-center d-flex mt-4">
      <a href="/expense/new" class="btn btn-outline-secondary px-3 fs-5">新增支出</a>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5">
          請確認是否要刪除此筆餐廳 ?
        </h1>
      </div>
      <div id="modal-body" class="modal-body">
        
      </div>
      <div class="modal-footer">
        <form id="delete-check" action="" method="POST" class="btn-delete-box">
          <button class="btn btn-dark" type="submit">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/javascripts/index.js"></script>